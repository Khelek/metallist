= simple_form_for @item, url: { action: action, controller: :items }, html: { class: 'form-horizontal' } do |f|
  = f.input :title, as: :string
  = f.input :price
  .form-actions
    = f.button :submit, t('helpers.save'), class: 'btn btn-primary'
    = link_to t('helpers.cancel', default: t("helpers.links.cancel")), admin_items_path, class: 'btn'
