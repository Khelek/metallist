= simple_form_for @item, url: admin_items_path, html: { class: 'form-horizontal' } do |f|
  = f.input :title, as: :string
  = f.input :price
  .form-actions
    = f.button :submit, class: 'btn btn-primary'
    = link_to t('cancel', default: t("helpers.links.cancel")), admin_items_path, class: 'btn'
