%li.dropdown
  %a.dropdown-toggle{href: "#", data: {toggle: 'dropdown'}}
    = t('.' << title)
    %b.caret
  %ul.dropdown-menu
    - for_dropdown_slug_pages.each do |slug|
      -#FIXME убрать переменные из вьюх О_О
      - page = slug_pages.select{ |page| page.slug == slug }.first
      - if page
        %li= link_to page.title, page_path(page)
